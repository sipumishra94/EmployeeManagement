@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}
<link href="~/css/Details.css" rel="stylesheet" />
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "Employee.jpg");
        <div class="card m-3" style="min-width: 18rem; max-height: 30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbNail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="edit" asp-route-id ="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>